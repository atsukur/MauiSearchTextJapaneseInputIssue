<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiSearchTextJapaneseInputIssue.MainPage">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Border Stroke="{StaticResource SecondaryBrush}" Padding="10">
                <Entry FontSize="Large" Placeholder="Entry"/>
            </Border>

            <Border Stroke="{StaticResource SecondaryBrush}" Padding="10">
                <SearchBar FontSize="Large" Placeholder="SearchBar"/>
            </Border>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
